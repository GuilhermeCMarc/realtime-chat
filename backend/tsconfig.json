{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "Node16",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@framework/*": ["framework/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
}